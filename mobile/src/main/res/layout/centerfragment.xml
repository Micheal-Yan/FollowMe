<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/headportrait" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="XXX"
                android:textColor="#2d2d2d"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/arrow"
                    android:gravity="center"
                    android:text="个人信息"
                    android:textColor="#838383"
                    android:textSize="18dp" />
            </LinearLayout>

            <TextView
                android:layout_width="350dp"
                android:layout_height="1dp"
                android:background="#bebebe" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="日均步数"
                        android:textColor="#969696"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="8173"
                        android:textColor="#545454"
                        android:textSize="25dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="68dp"
                    android:layout_gravity="center"
                    android:background="#969696" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="总公里数"
                        android:textColor="#969696"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="203"
                        android:textColor="#545454"
                        android:textSize="25dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="68dp"
                    android:layout_gravity="center"
                    android:background="#969696" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="达标天数"
                        android:textColor="#969696"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="16"
                        android:textColor="#545454"
                        android:textSize="25dp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="350dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="#bebebe" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="bottom"
                android:text="我的设备"
                android:textColor="#9f9f9f"
                android:textSize="15dp" />

            <TextView
                android:layout_width="350dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="#bebebe" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/watch"
                    android:gravity="left"
                    android:text="智能手表"
                    android:textColor="#545454"
                    android:textSize="20dp" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginRight="40dp"
                    android:src="@drawable/arrow" />
            </LinearLayout>

            <TextView
                android:layout_width="350dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="#bebebe" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:text="目标设置"
                android:textColor="#9f9f9f"
                android:textSize="15dp" />

            <TextView
                android:layout_width="350dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="#bebebe" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/target"
                    android:gravity="left"
                    android:text="运动目标"
                    android:textColor="#545454"
                    android:textSize="20dp" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginRight="40dp"
                    android:src="@drawable/arrow" />
            </LinearLayout>

            <TextView
                android:layout_width="350dp"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:background="#bebebe" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/balance"
                    android:gravity="left"
                    android:text="体重目标"
                    android:textColor="#545454"
                    android:textSize="20dp" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginRight="40dp"
                    android:src="@drawable/arrow" />
            </LinearLayout>


            <TextView
                android:layout_width="350dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="#bebebe" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="left"
                android:text="安全设置"
                android:textColor="#9f9f9f"
                android:textSize="15dp" />

            <TextView
                android:layout_width="350dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="#bebebe" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/antitheft"
                    android:gravity="left"
                    android:text="防盗"
                    android:textColor="#545454"
                    android:textSize="20dp" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginRight="40dp"
                    android:src="@drawable/arrow" />
            </LinearLayout>


            <TextView
                android:layout_width="350dp"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:background="#bebebe" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="left"
                android:text="其他"
                android:textColor="#9f9f9f"
                android:textSize="15dp" />

            <TextView
                android:layout_width="350dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="#bebebe" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/record"
                    android:gravity="left"
                    android:text="历史记录"
                    android:textColor="#545454"
                    android:textSize="20dp" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginRight="40dp"
                    android:src="@drawable/arrow" />
            </LinearLayout>

            <TextView
                android:layout_width="350dp"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:background="#bebebe" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/remind"
                    android:gravity="left"
                    android:text="锻炼提醒"
                    android:textColor="#545454"
                    android:textSize="20dp" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginRight="40dp"
                    android:src="@drawable/arrow" />
            </LinearLayout>

            <TextView
                android:layout_width="350dp"
                android:layout_height="1dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
